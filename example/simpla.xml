		<Module type="PML" >
			<Parameters>
				  <Field id="B" type="TwoForm" io="RW">B1</B>
				  <Field id="E" type="OneForm" io="RW">E1</E>
				  <Field id="J" type="OneForm" io="R" >J1</J>   
			</Parameters>
			<bc> 20 20 20 20 20 20 </bc>
		</Module>

	</Modules>

	<OutPut type="XDMF" path="Untitle" stride="1">
