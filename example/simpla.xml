<Context>
        <PhysConstants type="NATURE"></PhysConstants> 
	
	<dt unit="s">0.0025</dt>

	<Grid type="UniformRect">
		<NUM_OF_DIMS>3</NUM_OF_DIMS>
		<dx unit="m">1 1 1</dx>
		<xmin unit="m">0 0 0 </xmin>
		<xmax unit="m">1 1 1 </xmax>
		<dims>201 201 1</dims>
		<ghostwidth>2 2 2 </ghostwidth>
	</Grid>

	<Particles type="delta_f" id="ele">
		<pic></pic>
	</Particles>
	
	<Fields>
		<Field type="OneForm" id="E1"><value> 0 0 0 </value></Field>
		<Field type="OneForm" id="J1"><value> 0 0 0 </value></Field>
		<Field type="TwoForm" id="B1"><value> 0 0 1 </value>
		<!--	<url>file://tmp/a.h5:/B1</url> -->
		</Field>
	</Fields>
	<Modules>
		<Module type="SetValue">
			 <Parameters> 
				<Field type="OneForm" >J1</Field>
			 </Parameters> 
			 <value> 0 0 0 </value>
		</Module>
		<Module type="RFSrc" >
			<Parameters>                               
				<Field type="OneForm" io="RW">E1</Field>
			</Parameters>
			<alpha>0.01 </alpha>
			<freq> 100 </freq>
			<amp> 0 0 1 </amp>
			<pos> 0.5 0.5 0 </pos>
		</Module>
		<Module type="ColdFluid" >
			  <Parameters>
				  <Field id="B" type="TwoForm" io="RW">B1</B>
				  <Field id="E" type="OneForm" io="RW">E1</E>
				  <Field id="J" type="OneForm" io="R" >J1</J>
			  </Parameters>
			  <Composition>
				  <species id="H">
					  <m>1</m>
					  <Z>1</Z>
					  <ns>0.5</ns>                                        
				  </species>
			  </Composition>
		  </Module>


